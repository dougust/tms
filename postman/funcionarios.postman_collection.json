{
  "info": {
    "name": "Funcionarios API",
    "description": "CRUD operations for Funcionarios endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "businessId",
      "value": "your-business-id-here",
      "type": "string"
    },
    {
      "key": "funcionarioId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Funcionario",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201 || pm.response.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    pm.collectionVariables.set('funcionarioId', jsonData.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"João da Silva\",\n  \"social\": \"João Silva\",\n  \"cpf\": \"12345678901\",\n  \"nascimento\": \"1990-05-15\",\n  \"phone\": \"+5511999999999\",\n  \"email\": \"joao.silva@example.com\",\n  \"rg\": \"123456789\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/funcionarios",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios"]
        },
        "description": "Creates a new funcionario with associated cadastro"
      },
      "response": []
    },
    {
      "name": "Get All Funcionarios",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/funcionarios",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios"]
        },
        "description": "Retrieves all funcionarios with their cadastro data"
      },
      "response": []
    },
    {
      "name": "Get All Funcionarios (with businessId)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/funcionarios?businessId={{businessId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios"],
          "query": [
            {
              "key": "businessId",
              "value": "{{businessId}}"
            }
          ]
        },
        "description": "Retrieves all funcionarios filtered by businessId"
      },
      "response": []
    },
    {
      "name": "Get Funcionario by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/funcionarios/{{funcionarioId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios", "{{funcionarioId}}"]
        },
        "description": "Retrieves a single funcionario with cadastro data by ID"
      },
      "response": []
    },
    {
      "name": "Get Funcionario by ID (with businessId)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/funcionarios/{{funcionarioId}}?businessId={{businessId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios", "{{funcionarioId}}"],
          "query": [
            {
              "key": "businessId",
              "value": "{{businessId}}"
            }
          ]
        },
        "description": "Retrieves a single funcionario filtered by businessId"
      },
      "response": []
    },
    {
      "name": "Update Funcionario",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"João da Silva Santos\",\n  \"phone\": \"+5511988888888\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/funcionarios/{{funcionarioId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios", "{{funcionarioId}}"]
        },
        "description": "Updates funcionario and/or cadastro fields"
      },
      "response": []
    },
    {
      "name": "Update Only Cadastro Fields",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"joao.updated@example.com\",\n  \"phone\": \"+5511977777777\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/funcionarios/{{funcionarioId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios", "{{funcionarioId}}"]
        },
        "description": "Updates only cadastro fields"
      },
      "response": []
    },
    {
      "name": "Delete Funcionario",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/funcionarios/{{funcionarioId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios", "{{funcionarioId}}"]
        },
        "description": "Deletes a funcionario"
      },
      "response": []
    },
    {
      "name": "Delete Funcionario (with businessId)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/funcionarios/{{funcionarioId}}?businessId={{businessId}}",
          "host": ["{{baseUrl}}"],
          "path": ["funcionarios", "{{funcionarioId}}"],
          "query": [
            {
              "key": "businessId",
              "value": "{{businessId}}"
            }
          ]
        },
        "description": "Deletes a funcionario filtered by businessId"
      },
      "response": []
    }
  ]
}
