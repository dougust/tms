{
  "name": "infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "infra/aws/src",
  "projectType": "library",
  "tags": [
    "infra"
  ],
  "// targets": "to see all targets run: nx show project infra --web",
  "targets": {
    "synth": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infra/aws",
        "command": "cdk synth"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "be:build",
        "prepare-migrations"
      ],
      "options": {
        "cwd": "infra/aws",
        "command": "cdk deploy --all --require-approval never"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash scripts/invoke-migration.sh",
        "cwd": "infra/aws"
      }
    }
  }
}
