{
  "name": "dougust",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dougust/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": [
          "--node-env=production"
        ],
        "cwd": "apps/dougust"
      },
      "configurations": {
        "development": {
          "args": [
            "--node-env=development"
          ]
        }
      }
    },
    "generate-open-api-specs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../dist/apps/dougust/main.js --gen-openapi",
        "cwd": "apps/dougust"
      },
      "dependsOn": [
        "build"
      ]
    },
    "generate-clients": {
      "executor": "nx:run-commands",
      "options": {
        "command": "kubb generate",
        "cwd": "apps/dougust"
      },
      "dependsOn": [
        "generate-open-api-specs"
      ]
    },
    "prune-lockfile": {
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/dougust/package.json",
        "{workspaceRoot}/dist/apps/dougust/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": [
        "build"
      ],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/dougust/workspace_modules"
      ],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": [
        "prune-lockfile",
        "copy-workspace-modules"
      ],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "dougust:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "dougust:build:development"
        },
        "production": {
          "buildTarget": "dougust:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
