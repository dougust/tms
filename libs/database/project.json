{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/database/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/database",
        "tsConfig": "libs/database/tsconfig.lib.json",
        "packageJson": "libs/database/package.json",
        "main": "libs/database/src/index.ts",
        "assets": ["libs/database/*.md"]
      }
    },
    "push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx drizzle-kit push --config=drizzle-dev.config.ts",
        "cwd": "libs/database"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "options": {
        "command": "npx drizzle-kit generate",
        "cwd": "libs/database"
      },
      "configurations": {
        "core": {},
        "tenant": {
          "command": "npx drizzle-kit generate --config=drizzle-tenant.config.ts"
        },
        "dev": {
          "command": "npx drizzle-kit generate --config=drizzle-dev.config.ts"
        }
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "options": {
        "command": "npx drizzle-kit migrate",
        "cwd": "libs/database"
      },
      "configurations": {
        "core": {},
        "tenant": {
          "command": "npx drizzle-kit generate --config=drizzle-tenant.config.ts"
        },
        "dev": {
          "command": "npx drizzle-kit migrate --config=drizzle-dev.config.ts"
        }
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx libs/database/src/seed.ts --config=drizzle-dev.config.ts"
      }
    },
    "db": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "up",
      "options": {
        "command": "docker compose up -d"
      },
      "configurations": {
        "up": {
          "command": "docker compose up -d"
        },
        "down": {
          "command": "docker compose down"
        },
        "clean": {
          "command": "docker compose down -v"
        }
      }
    },
    "restore": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run db:restore",
        "cwd": "."
      }
    }
  }
}
